{
  "name": "quiz-elections",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "rm -rf dist/* && vue-cli-service build --no-clean",
    "lint": "vue-cli-service lint",
    "travis": "vue-cli-service build"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "d3-dsv": "^1.1.1",
    "vue": "^2.6.10",
    "vue-router": "^3.0.7",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.2",
    "@vue/cli-plugin-eslint": "^3.9.2",
    "@vue/cli-service": "^3.9.2",
    "node-sass": "^4.12.0",
    "resize-observer-polyfill": "^1.5.1",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-route": "0.0.7",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/attributes-order": "error",
      "vue/html-quotes": "error",
      "vue/no-confusing-v-for-v-if": "error",
      "vue/order-in-components": "error",
      "vue/this-in-template": "error",
      "vue/html-closing-bracket-newline": "warning",
      "vue/html-closing-bracket-spacing": "warning",
      "vue/no-use-v-if-with-v-for": "error",
      "vue/no-v-html": "warning",
      "vue/prop-name-casing": "warning",
      "vue/script-indent": "warning"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
